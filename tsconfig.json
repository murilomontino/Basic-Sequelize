{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 14",
    
    "compilerOptions": {
      "jsx": "react-native",
      "target": "ES2020",
      "module": "CommonJS",
      "lib": [
        "es2020"
      ],
      "experimentalDecorators": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "allowJs": true,
      "noEmit": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist"
    },
    "include": [
      "config",
      "models"
    ],
    "exclude": [
      "types",
      "tests",
      "node_modules"
    ]
    
  }